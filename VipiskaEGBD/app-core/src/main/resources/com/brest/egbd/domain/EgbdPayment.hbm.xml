<?xml version='1.0'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.brest.egbd.domain">

    <class name="EgbdPayment" table="BEGBDPAYMENT">
        <id name="egbdPaymentId" type="long" column="egbdPaymentId">
            <generator class="native"/>
        </id>
        <property name="egbdPaymentSumma" column="egbdPaymentSumma"/>
        <property name="egbdPaymentDate" type="date" column="egbdPaymentDate"/>

    </class>

</hibernate-mapping>